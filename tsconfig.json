{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./types",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "baseUrl": "./src",
    "types": []
  },
  "include": ["src"],
  "exclude": ["__sapper__/*", "src/*.test.js"]
}
